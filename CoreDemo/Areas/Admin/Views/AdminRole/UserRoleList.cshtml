@using EntityLayer.Concrete
@model List<AppUser>
@{
    ViewData["Title"] = "UserRoleList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Kullanıcı Rol Listesi</h1>
<table class="table table-bordered">
    <tr>
        <th>Kullanıcı</th>
        <th>Rol Ata</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.UserName</td>
            <td><a href="/Admin/AdminRole/AssignRole/@x.Id" class="btn btn-outline-primary">Rol Ata</a></td>
        </tr>
    }
</table>
<a href="/Admin/AdminRole/Index" class="btn btn-primary">Rol Listesine Geri Dön</a>