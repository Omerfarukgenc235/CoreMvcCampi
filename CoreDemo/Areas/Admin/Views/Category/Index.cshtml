@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Kategori Listesi</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Yayın Durumu</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.CategoryID</td>
            <td>@x.CategoryName</td>
            <td><a href="/Admin/Category/CategoryDelete/@x.CategoryID/" id="DeleteBtn" onclick="return confirm('Silmek istediğinizden emin misiniz ?');" class="btn btn-danger">Yayından Kaldır</a></td>
            <td><a href="/Admin/Category/KategoriDuzenleme/@x.CategoryID" class="btn btn-success">Düzenle</a></td>
            <td><a href="/Admin/Category/CategoryDelete/@x.CategoryID/" id="DeleteBtn" onclick="return confirm('Silmek istediğinizden emin misiniz ?');" class="btn btn-danger">Pasif Yap</a></td>
            <td><a href="#" class="btn btn-info">Aktif Yap</a></td>
            <td><a href="#" class="btn btn-success">Düzenle</a></td>
        </tr>
    }
</table>
<br />
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
<br />
<a href="/Admin/Category/AddCategory/" class="btn btn-primary">Yeni Kategori Ekle</a>
