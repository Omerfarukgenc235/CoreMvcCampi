@model EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "ComposeMessage";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Mailbox</title>

    <link href="~/admin/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/admin/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/admin/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/admin/css/plugins/summernote/summernote-bs4.css" rel="stylesheet">
    <link href="~/admin/css/animate.css" rel="stylesheet">
    <link href="~/admin/css/style.css" rel="stylesheet">

</head>

<body>
    <div class="wrapper wrapper-content">
        <div class="row">
            <div class="col-lg-3">
                <div class="ibox ">
                    <div class="ibox-content mailbox-content">
                        <div class="file-manager">
                            <a class="btn btn-block btn-primary compose-mail" href="/Admin/Message/ComposeMessage/">Yeni Mesaj Gönder</a>
                            <div class="space-25"></div>
                            <h5>Mesajlar</h5>
                            <ul class="folder-list m-b-md" style="padding: 0">
                                <li><a href="/Admin/Message/InBox"> <i class="fa fa-inbox "></i> Gelen Kutusu <span class="label label-warning float-right">16</span> </a></li>
                                <li><a href="/Admin/Message/SendBox"> <i class="fa fa-envelope-o"></i> Giden Kutusu</a></li>
                                <li><a href="mailbox.html"> <i class="fa fa-trash-o"></i> Çöp Kutusu</a></li>
                            </ul>

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-9 animated fadeInRight">
                <div class="mail-box-header">

                    <h2>
                        Yeni Mesaj
                    </h2>
                </div>
                <div class="mail-box">

                    <form method="post">

                        <div class="mail-body">

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Alıcı:</label>

                                <div class="col-sm-10"><input type="text" class="form-control" placeholder="Alıcı"></div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Konu:</label>

                                <div class="col-sm-10"><input type="text" name="Subject" class="form-control" placeholder="Konu" value=""></div>
                            </div>

                        </div>

                        <div class="mail-text h-200">

                            <div class="summernote">
                                <textarea cols="30" rows="8" name="MessageDetails" placeholder="Buraya mesajınızı yazınız." class="form-control"></textarea>
                                <br />
                                <br />

                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="mail-body text-right tooltip-demo">
                        <button type="submit" class="btn btn-sm btn-primary" title="Gönder"><i class="fa fa-reply"></i> Gönder</button>
                        </div>
                    </form>

             
                    <div class="clearfix"></div>



                </div>
            </div>
        </div>
    </div>




</body>

</html>
