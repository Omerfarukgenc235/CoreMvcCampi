@model IEnumerable<EntityLayer.Concrete.Comment>
<div class="comment-top">
    @if (Model.Count() > 0)
    {
        <h4>Yorumlar</h4>
    }
    else
    {
        <h4>Bu Bloğa Henüz Yorum Yapılmamış. İlk Yorumu Sen Yap</h4>
    }
    @foreach (var x in Model)
    {
        <div class="media">
            <img src="~/CoreBlogDemo/images/t1.jpg" alt="" class="img-fluid" />
            <div class="media-body">
                <h5 class="mt-0">@x.CommentUserName</h5>
                <p>
                    @x.CommentContent
                </p>


            </div>
        </div>
    }
</div>